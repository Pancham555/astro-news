---
import Github from "@/assets/svgs/github.astro";
import Search01 from "@/assets/svgs/search-01.astro";
import MenuDropdown from "./menu-dropdown.astro";
import { SITE } from "@/lib/config";
import ThemeController from "../bases/theme-controller.astro";
---

<div
  class="navbar border-b border-primary-content/80 dark:border-primary-content/20 fixed bg-base-100 z-40">
  <div class="navbar-start lg:w-1/2">
    <MenuDropdown />
    <div class="lg:hidden flex items-center">
      <img src="/The_Nomad.png" alt="logo" class="w-6" />
      <a class="text-xl px-2 text-nowrap" href="/">{SITE.title}</a>
    </div>
  </div>
  <div class="navbar-center hidden lg:flex items-center">
    <img src="/The_Nomad.png" alt="logo" class="w-8" />
    <a class="text-xl px-2" href="/">{SITE.title}</a>
  </div>
  <div class="navbar-end">
    <a class="btn btn-ghost btn-circle" href="/search" aria-label="Search">
      <Search01 />
    </a>
    <ThemeController />
    <!-- <a
      class="btn btn-ghost btn-circle"
      href={SITE.github}
      target="_blank"
      aria-label="GitHub"
    >
      <Github />
    </a> -->
  </div>
</div>
